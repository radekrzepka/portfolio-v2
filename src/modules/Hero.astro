---
import { ArrowRight } from "lucide-react";
import { getRelativeLocaleUrl } from "astro:i18n";
import { Button } from "@/components/ui/button";
import {
  COMMERCIAL_EXPERIENCE_YEARS,
  LEARNING_EXPERIENCE_YEARS,
} from "@/lib/experience";
import { getSocialLinks, useTranslations } from "@/i18n";
import SectionContainer from "@/layouts/SectionContainer.astro";

interface Props {
  locale: "en" | "pl";
}

const { locale } = Astro.props;
const socialLinks = getSocialLinks(locale);
const t = useTranslations(locale);
---

<SectionContainer>
  <div class="mt-24 py-4">
    <div class="flex flex-col justify-center space-y-8">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold animate-slide-up">
        {t("hero.greeting")} <span class="text-primary whitespace-nowrap"
          >Rados≈Çaw Rzepka</span
        >
      </h1>
      <p
        class="text-xl text-muted-foreground max-w-[700px] animate-slide-up-delay"
      >
        {t("hero.intro", {
          commercialYears: String(COMMERCIAL_EXPERIENCE_YEARS),
          learningYears: String(LEARNING_EXPERIENCE_YEARS),
        })}
      </p>

      <div class="flex flex-col sm:flex-row gap-3 pt-4 animate-fade-in-delay">
        <a href={getRelativeLocaleUrl(locale, "projects")}>
          <Button variant="default" size="lg">
            {t("hero.projects")} <ArrowRight className="ml-2 h-4 w-4" />
          </Button>
        </a>
        <a href={getRelativeLocaleUrl(locale, "contact")}>
          <Button variant="outline" size="lg">{t("hero.contact")}</Button>
        </a>
      </div>

      <div class="flex items-center gap-4 pt-2 animate-fade-in-delay-2">
        {
          socialLinks.map(({ href, icon: Icon, label }) => (
            <a
              href={href}
              class="text-muted-foreground hover:text-foreground transition-colors"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Icon className="h-6 w-6" />
              <span class="sr-only">{label}</span>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</SectionContainer>
