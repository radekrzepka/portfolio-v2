---
import { ArrowLeft } from "lucide-react";
import { Button } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from "@/i18n";

const locale = getLangFromUrl(Astro.url);
const t = useTranslations(locale);
---

<Layout
  title={locale === "pl" ? "404 - Strona nie znaleziona | Radosław Rzepka" : "404 - Page not found | Radosław Rzepka"}
  description={t("404.pageDescription")}
  locale={locale}
>
  <div
    class="container mx-auto px-4 flex flex-col items-center justify-center min-h-[70vh] text-center"
  >
    <div class="relative">
      <h1 class="text-9xl font-bold text-primary opacity-10 md:text-[15rem]">
        404
      </h1>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="space-y-6 max-w-2xl">
          <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">
            {t("404.title")}
          </h2>
          <p class="text-muted-foreground">
            {t("404.description")}
          </p>
          <div class="flex justify-center pt-4">
            <a href={locale === "pl" ? "/pl" : "/"}>
              <Button variant="default" size="lg">
                <ArrowLeft className="mr-2 h-4 w-4" />
                {t("404.backHome")}
              </Button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
