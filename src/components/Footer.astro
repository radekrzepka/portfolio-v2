---
import { navLinks, socialLinks } from "../data/navigation";

const currentYear = new Date().getFullYear();
---

<footer class="border-t bg-muted/30">
  <div class="px-4 md:px-6 py-8 md:py-12">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="space-y-4">
        <h3 class="font-bold text-lg">Radosław Rzepka</h3>
        <p class="text-sm text-muted-foreground">
          Full-stack developer specjalizujący się w Next.js, React, TypeScript,
          AWS i Nest.js.
        </p>
        <div class="flex space-x-4">
          {
            socialLinks.map(({ href, icon: Icon, label }) => (
              <a
                href={href}
                class="text-muted-foreground hover:text-foreground transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <Icon className="h-5 w-5" />
                <span class="sr-only">{label}</span>
              </a>
            ))
          }
        </div>
      </div>

      <div class="space-y-4">
        <h3 class="font-bold text-lg">Nawigacja</h3>
        <ul class="space-y-2 text-sm">
          {
            navLinks.map(({ href, label }) => (
              <li>
                <a
                  href={href}
                  class="text-muted-foreground hover:text-foreground transition-colors"
                >
                  {label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div class="space-y-4">
        <h3 class="font-bold text-lg">Kontakt</h3>
        <p class="text-sm text-muted-foreground">
          Zainteresowany współpracą? Skontaktuj się ze mną.
        </p>
        <a
          href="/contact"
          class="inline-block text-sm font-medium text-primary hover:underline"
        >
          Napisz do mnie
        </a>
      </div>
    </div>

    <div class="mt-12 pt-6 border-t text-center text-sm text-muted-foreground">
      <p>© {currentYear} Radosław Rzepka. Wszelkie prawa zastrzeżone.</p>
    </div>
  </div>
</footer>
