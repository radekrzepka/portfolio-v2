---
import { getCertifications } from "@/i18n";

interface Props {
  locale: "en" | "pl";
}

const { locale } = Astro.props;
const certifications = getCertifications(locale);
---

<div class="mt-4">
  <div class="flex flex-wrap gap-2">
    {
      certifications.map((cert) => {
        const Icon = cert.icon;
        return (
          <a
            href={cert.credentialUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 rounded-md bg-blue-100 px-2 py-1 text-xs text-blue-800 transition-colors hover:bg-blue-200 dark:bg-blue-900/30 dark:text-blue-300 dark:hover:bg-blue-900/50"
          >
            <Icon className="h-3 w-3" />
            <span class="max-w-[260px] truncate">
              {cert.name.split("-")[0].trim()}
            </span>
          </a>
        );
      })
    }
  </div>
</div>
