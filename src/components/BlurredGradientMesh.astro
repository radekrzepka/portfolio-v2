<canvas
  id="gradient-canvas"
  class="absolute inset-0 w-full h-full -z-10 opacity-70"></canvas>

<script>
  const canvas = document.getElementById(
    "gradient-canvas",
  ) as HTMLCanvasElement;
  const ctx = canvas.getContext("2d");

  function resizeCanvas() {
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;
    drawGradientMesh();
  }

  function drawGradientMesh() {
    if (!ctx) return;

    const width = canvas.width;
    const height = canvas.height;

    // Clear canvas
    ctx.clearRect(0, 0, width, height);

    // Create gradient
    const gradient = ctx.createLinearGradient(0, 0, width, height);
    gradient.addColorStop(0, "rgba(74, 222, 128, 0.2)"); // Light green
    gradient.addColorStop(0.5, "rgba(59, 130, 246, 0.2)"); // Light blue
    gradient.addColorStop(1, "rgba(217, 70, 239, 0.2)"); // Light purple

    ctx.fillStyle = gradient;
    ctx.fillRect(0, 0, width, height);

    // Add blurred circles
    const circles = 5;
    for (let i = 0; i < circles; i++) {
      const x = Math.random() * width;
      const y = Math.random() * height;
      const radius = Math.random() * 300 + 100;

      const circleGradient = ctx.createRadialGradient(x, y, 0, x, y, radius);

      // Random pastel colors
      const hue = Math.random() * 360;
      circleGradient.addColorStop(0, `hsla(${hue}, 70%, 70%, 0.4)`);
      circleGradient.addColorStop(1, `hsla(${hue}, 70%, 70%, 0)`);

      ctx.fillStyle = circleGradient;
      ctx.beginPath();
      ctx.arc(x, y, radius, 0, Math.PI * 2);
      ctx.fill();
    }

    // Apply blur effect
    ctx.filter = "blur(80px)";
    ctx.drawImage(canvas, 0, 0);
    ctx.filter = "none";
  }

  resizeCanvas();
  window.addEventListener("resize", resizeCanvas);
</script>
