---
import type { Skill } from "@/data/skills";

import { skills } from "@/data/skills";

const featuredSkills: Skill[] = skills.filter(
  (skill) => skill.isFeatured && !skill.hideInSkills,
);
---

<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8">
  {
    featuredSkills.map((skill) => {
      const Icon = skill.icon;
      return (
        <div class="flex flex-col items-center justify-center gap-3 transform transition-all duration-300 hover:scale-110">
          <div
            class="rounded-xl p-4 bg-background dark:bg-zinc-800 transition-all duration-300 hover:-translate-y-1"
            style={{ boxShadow: `0 0 0 rgba(0, 0, 0, 0)` }}
            onmouseenter={`this.style.boxShadow = '0 0 20px ${skill.color}33'; this.style.color = '${skill.color}';`}
            onmouseleave={`this.style.boxShadow = '0 0 0 rgba(0, 0, 0, 0)'; this.style.color = '';`}
          >
            <Icon className="h-8 w-8" />
          </div>
          <span class="text-sm font-medium dark:text-zinc-300">
            {skill.name}
          </span>
        </div>
      );
    })
  }
</div>
