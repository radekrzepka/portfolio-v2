---
import SectionContainer from "@/layouts/SectionContainer.astro";
import { COMMERCIAL_START_YEAR } from "@/lib/experience";
import { useTranslations } from "@/i18n";

interface Props {
  locale: "en" | "pl";
}

const { locale } = Astro.props;
const t = useTranslations(locale);
---

<SectionContainer>
  <h2 class="text-3xl font-bold tracking-tighter mb-6">{t("about.title")}</h2>
  <div class="space-y-4 text-muted-foreground">
    <p>
      {t("about.paragraph1", { year: String(COMMERCIAL_START_YEAR) })}
    </p>
    <p>
      {t("about.paragraph2")}
    </p>
    <p>
      {t("about.paragraph3")}
    </p>
  </div>
</SectionContainer>
