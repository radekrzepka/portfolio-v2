---
import AboutMeSection from "@/components/home/AboutMeSection.astro";
import FeaturedCertifications from "@/components/home/FeaturedCertifications.astro";
import FeaturedProjects from "@/components/home/FeaturedProjects.astro";
import SkillsSection from "@/components/home/SkillsSection.astro";
import Hero from "@/modules/Hero.astro";
import type { Locale } from "@/i18n";

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<div class="flex flex-col w-full">
  <Hero locale={locale} />
  <AboutMeSection locale={locale} />
  <SkillsSection locale={locale} />
  <FeaturedProjects locale={locale} />
  <FeaturedCertifications locale={locale} />
</div>
