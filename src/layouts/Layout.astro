---
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
import { getAbsoluteLocaleUrl } from "astro:i18n";

import Navigation from "@/components/navigation/Navigation.astro";
import Footer from "@/layouts/Footer.astro";
import { useTranslations } from "@/i18n";

import "./../styles/global.css";

interface Props {
  title: string;
  description?: string;
  locale: "en" | "pl";
}

const {
  title,
  description,
  locale = "en",
} = Astro.props;

const t = useTranslations(locale);
const defaultDescription = t("footer.tagline");
const resolvedDescription = description ?? defaultDescription;
const currentPath = Astro.url.pathname.replace(/^\/pl\/?/, "") || "";
const enUrl = getAbsoluteLocaleUrl("en", currentPath);
const plUrl = getAbsoluteLocaleUrl("pl", currentPath);
---

<!doctype html>
<html lang={locale} class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={resolvedDescription} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="pl" href={plUrl} />
    <Analytics />
    <SpeedInsights />

    <script is:inline>
      (function () {
        if (typeof window === "undefined") return;
        const path = window.location.pathname;
        const isPl = path.startsWith("/pl");
        const stored = localStorage.getItem("locale");
        if (stored) {
          if (stored === "pl" && !isPl)
            window.location.replace("/pl" + path);
          if (stored === "en" && isPl)
            window.location.replace(path.replace("/pl", "") || "/");
          return;
        }
        const pref = navigator.language.startsWith("pl") ? "pl" : "en";
        if (pref === "pl" && !isPl) window.location.replace("/pl" + path);
      })();
    </script>

    <script is:inline>
      const getThemePreference = () => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      };

      const isDark = getThemePreference() === "dark";
      document.documentElement.classList[isDark ? "add" : "remove"]("dark");

      if (typeof localStorage !== "undefined") {
        const observer = new MutationObserver(() => {
          const isDark = document.documentElement.classList.contains("dark");
          localStorage.setItem("theme", isDark ? "dark" : "light");
        });
        observer.observe(document.documentElement, {
          attributes: true,
          attributeFilter: ["class"],
        });
      }
    </script>
  </head>
  <body class="flex flex-col min-h-screen">
    <Navigation locale={locale} />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer locale={locale} />
    <style is:global>
      html,
      body {
        min-height: 100vh;
      }

      body {
        background-attachment: fixed;
        background-image:
          radial-gradient(
            circle at 10% 10%,
            rgba(100, 149, 237, 0.15) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 90% 20%,
            rgba(123, 104, 238, 0.15) 0%,
            transparent 55%
          ),
          radial-gradient(
            circle at 50% 90%,
            rgba(72, 209, 204, 0.15) 0%,
            transparent 60%
          );
        position: relative;
        overflow-x: hidden;
      }

      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(0, 0, 0, 0.2),
          transparent
        );
        z-index: 1;
      }

      html.dark body {
        background-attachment: fixed;
        background-image:
          radial-gradient(
            circle at 10% 10%,
            rgba(111, 66, 193, 0.25) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 90% 20%,
            rgba(220, 20, 60, 0.15) 0%,
            transparent 55%
          ),
          radial-gradient(
            circle at 50% 90%,
            rgba(65, 105, 225, 0.15) 0%,
            transparent 60%
          );
      }

      html.dark body::before {
        background: linear-gradient(
          90deg,
          transparent,
          rgba(255, 255, 255, 0.2),
          transparent
        );
      }
    </style>
  </body>
</html>
