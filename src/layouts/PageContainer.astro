---
import PageHeader from "@/layouts/PageHeader.astro";
import { useTranslations, type UIKey } from "@/i18n";

interface Props {
  locale: string;
  title?: string;
  titleKey?: UIKey;
  description?: string;
  descriptionKey?: UIKey;
}

const { locale, title, titleKey, description, descriptionKey } = Astro.props;
const t = useTranslations(locale as "en" | "pl");
const resolvedTitle = titleKey ? t(titleKey) : title ?? "";
const resolvedDescription = descriptionKey
  ? t(descriptionKey)
  : description;
---

<div class="container mx-auto px-4 py-24 md:py-32">
  <PageHeader title={resolvedTitle} description={resolvedDescription} />

  <div class="content-container animate-fade-in-delay">
    <slot />
  </div>
</div>
